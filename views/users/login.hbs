<div class="flex-1 flex flex-col items-center justify-center bg-gray-100 min-h-[calc(100vh-HEADER_HEIGHT-FOOTER_HEIGHT)]">
  <form
    method="POST"
    action="/auth/login"
    class="bg-white p-8 rounded-xl shadow-xl w-full max-w-md"
  >
    <h2 class="text-2xl font-semibold text-center text-gray-900 mb-6">Login</h2>

    {{#if errorMessage}}
      <div class="text-red-600 text-sm mb-4">{{errorMessage}}</div>
    {{/if}}

    <input
      type="email"
      name="Email"
      placeholder="Email Address"
      required
      class="w-full p-3 border border-gray-300 rounded-lg mb-4 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />

    <input
      type="password"
      name="Password"
      placeholder="Password"
      required
      class="w-full p-3 border border-gray-300 rounded-lg mb-6 focus:outline-none focus:ring-2 focus:ring-blue-500"
    />

    <button
      type="submit"
      class="w-full bg-blue-600 text-white p-3 rounded-lg hover:bg-blue-700 transition-colors"
    >
      Login
    </button>
  </form>
</div>
