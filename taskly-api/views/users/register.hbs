<div class="flex-1 flex items-center justify-center min-h-[calc(100vh-HEADER_HEIGHT-FOOTER_HEIGHT)]">
  <form
    method="POST"
    action="/users/register"
    class="bg-white p-8 rounded-xl shadow-lg w-full max-w-md"
  >
    <h2 class="text-2xl font-semibold text-gray-800 text-center mb-6">
      Create Account
    </h2>

    <input
      type="text"
      name="Name"
      placeholder="Full Name"
      required
      class="w-full p-3 border border-gray-300 rounded-md mb-4 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
    <input
      type="email"
      name="Email"
      placeholder="Email Address"
      required
      class="w-full p-3 border border-gray-300 rounded-md mb-4 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
    <input
      type="password"
      name="Password"
      placeholder="Password"
      required
      class="w-full p-3 border border-gray-300 rounded-md mb-6 focus:ring-2 focus:ring-blue-500 focus:outline-none"
    />
    <button
      type="submit"
      class="w-full bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition duration-200"
    >
      Register
    </button>
  </form>
</div>
